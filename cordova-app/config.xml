<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="20140000" id="uk.co.plasticpatrol" ios-CFBundleIdentifier="com.lewismakesapps.Plastic-Patrol" ios-CFBundleVersion="2.14.0" version="2.14.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Planet Patrol</name>
    <description>
        Fighting Pollution in the UK Waterways.
    </description>
    <author email="geovation@geovation.uk" href="https://geovation.uk/">Geovation</author>
    <content src="index.html"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <preference name="webviewbounce" value="false"/>
    <preference name="UIWebViewBounce" value="false"/>
    <preference name="CameraUsesGeolocation" value="true"/>
    <preference name="Orientation" value="portrait"/>
    <platform name="android">
        <allow-intent href="market:*"/>
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png"/>
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png"/>
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png"/>
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png"/>
        <icon density="xxhdpi" src="res/icon/android/icon-144-xxhdpi.png"/>
        <icon density="xxxhdpi" src="res/icon/android/icon-192-xxxhdpi.png"/>
        <splash density="land-hdpi" src="res/screen/android/landscape-hdpi.png"/>
        <splash density="land-ldpi" src="res/screen/android/landscape-ldpi.png"/>
        <splash density="land-mdpi" src="res/screen/android/landscape-mdpi.png"/>
        <splash density="land-xhdpi" src="res/screen/android/landscape-xhdpi.png"/>
        <splash density="port-hdpi" src="res/screen/android/portrait-hdpi.png"/>
        <splash density="port-ldpi" src="res/screen/android/portrait-ldpi.png"/>
        <splash density="port-mdpi" src="res/screen/android/portrait-mdpi.png"/>
        <splash density="port-xhdpi" src="res/screen/android/portrait-xhdpi.png"/>
        <resource-file src="google-services.json" target="app/google-services.json"/>
        <preference name="android-minSdkVersion" value="19"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
        <icon src="res/icon/ios/icon_20pt@2x.png" width="40"/>
        <icon src="res/icon/ios/icon_20pt@3x.png" width="60"/>
        <icon src="res/icon/ios/icon_29pt@3x.png" width="58"/>
        <icon src="res/icon/ios/icon_29pt@3x.png" width="87"/>
        <icon src="res/icon/ios/icon_40pt@2x.png" width="80"/>
        <icon src="res/icon/ios/icon_40pt@3x.png" width="120"/>
        <icon src="res/icon/ios/icon_60pt@2x.png" width="120"/>
        <icon src="res/icon/ios/icon_60pt@3x.png" width="180"/>
        <icon src="res/icon/ios/icon_76pt@2x.png" width="152"/>
        <icon src="res/icon/ios/icon_83.5@2x.png" width="167"/>
        <icon src="res/icon/ios/Icon.png" width="1024"/>
        <splash src="res/screen/ios/Default@2x~universal~anyany.png"/>
        <resource-file src="GoogleService-Info.plist"/>
        <preference name="DisallowOverscroll" value="true"/>
        <preference name="BackupWebStorage" value="local"/>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
            <string>Planet Patrol needs photo library access to get the picture of the litter that you collect.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
            <string>Planet Patrol needs to know where you are so it can place the photo of the litter that you collect in the map</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysUsageDescription">
            <string>Planet Patrol needs to know where you are so it can place the photo of the litter that you collect in the map</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>Planet Patrol needs camera access to take pictures of the litter that you collect.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="add" target="ITSAppUsesNonExemptEncryption">
            <false/>
        </edit-config>
    </platform>
    <hook src="scripts/changeVersion.js" type="before_prepare"/>

</widget>